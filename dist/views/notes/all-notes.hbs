{{#if success_msg}}

<div class="alert alert-danger alert-dismissible fade show alerta" role="alert">
    {{success_msg}}
    <button type="button" class="close" data-bs-dismiss="alert" aria-label="close">
        <span arial-hidden="true">&times;</span>

    </button>
</div>
