<div  class="row">
    {{#each notes}}
    
    <div class="col-md-3">
        <div class="card list mt-3">
            <div class="animate__animated animate__fadeInDownBig">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between alingn-item-center">
                    {{title}} <a href="/notes/edit/{{id}}" class="btn btn-danger">Edit</a>
                </h4>
                <p>{{description}}</p>
                <!--<a href="/notes/delete/{{id}}" class="btn btn-success">delete</a>-->




                <form action="/notes/delete/{{id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-success" type="submit">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
    </div>
    {{else}}

    <div class="col-md-4 container p-4">
        <img src="/img/all.JPEG" class="mx-auto d-block m-4 create" <alt="create">
