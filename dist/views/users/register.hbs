{{#if error_msg}}

<div class="alert alert-danger alert-dismissible fade show container p-4" role="alert">
    {{error_msg}}
    <button type="button" class="close" data-bs-dismiss="alert" aria-label="close">
        <span arial-hidden="true">&times;</span>

    </button>
</div>

{{/if}}


{{#each errors }}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-bs-dismiss="alert" aria-label="close">
        <span arial-hidden="true">&times;</span>
    </button>
</div>
{{/each}}
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card registro">
            <div class="card-header text-center">
                <h4 class="animate__animated animate__bounceInLeft" >REGISTER</h4>
            </div>
            <img class="animate__animated animate__fadeInDownBig" src="/img/register.JPEG" class="mx-auto registro index" alt="registro">
            <div class="card-body text-center">
                <form action="/users/register" method="POST">
                    <div class="form-group">
                        <input type="text" name="name" placeholder="Name" class="form-control" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Email" class="form-control" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="Password"
                            value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" name="confirm_password" placeholder="Password" class="form-control"
                            value="{{confirm_password}}">
                    </div>
                    <div class="form-control">
                        <button class="btn" class="form-control" type="submit">
                            CLICK FOR REGISTER
                        </button>
                    </div>
                </form>
            </div>

        </div>

    </div>

</div>